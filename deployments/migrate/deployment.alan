application-servers
	'server': local

external-systems

systems
	'client'
		configuration: 'default'
			'timezone' = "Europe/Amsterdam"

		instance-data:
			from 'server' / "ide-meie_odo" / "client"

	'sessions'
		configuration: custom
			'token interval' = 86400 // 1 day
			'token limit' = 2592000 // ~1 month (30 days)
			'domain name' = none
			'base uri' = "https://app.alan-platform.com/meie_odo/auth/"
			'known uris' = (
				'https://app.alan-platform.com/meie_odo/client/' = "Client"
			)
			'openid authority issuer uris' = (
			)
			'openid authority client ids' = (
			)

		instance-data:
			from 'server' / "ide-meie_odo" / "sessions"

	'server'
		configuration: 'multi-core'

		instance-data:
			from 'server' / "ide-meie_odo" / "server"
			@migrate

		schedule:
			every day every hour
				at 0
				at 30
